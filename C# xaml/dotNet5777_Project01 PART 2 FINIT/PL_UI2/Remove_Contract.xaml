<Window x:Class="PL_UI2.Remove_Contract"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL_UI2"
        mc:Ignorable="d"
        Title="Remove_Contract" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="52*"/>
        </Grid.RowDefinitions>
        <Button x:Name="button" FontSize="35" Foreground="red" Content="remove contract"  Grid.Row="2" Click="button_Click"/>
        <TextBox x:Name="textbox_id" Background="Beige" FontSize="35" TextWrapping="Wrap" Grid.Row="1" Margin="10,5,171,57"/>
        <Label x:Name="label" FontSize="28" Content="contract id &#xA;to remove: "/>
        <Grid.Background>
            <ImageBrush x:Name="image"   ImageSource="images/2.jpg"  />
        </Grid.Background>
    </Grid>
</Window>
